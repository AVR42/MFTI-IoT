#include <stdio.h>

int main(int argc, char **argv)
{
	unsigned int N;
	int K;
	unsigned int max = 0;
	scanf("%u %d", &N, &K);
	for (int i = 0; i<= 32-K; i++) {
		unsigned int mask = (1u << K) - 1;
		mask <<= i;
		unsigned int bits = N & mask;
		bits >>= i;
		if (bits > max) {
			max = bits;
			}
		}
		printf("%u\n", max);
    
    return 0;
}
